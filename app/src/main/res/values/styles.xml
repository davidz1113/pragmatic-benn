<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

       <!-- <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->

        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


    <style name="style_button1" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/circle_border_input</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_buttonGray">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorGrayDark</item>
    </style>

    <style name="style_button2" parent="style_button1">
        <item name="android:background">@drawable/circle_border_input_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="style_checkBox">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#bd000000</item>
    </style>

    <style name="style_buttonPrimaryDark">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:radius">4dp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>
